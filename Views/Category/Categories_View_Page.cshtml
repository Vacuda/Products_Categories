@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>

<a href="/Categories" class="btn btn-success">Back</a>

<h1>@ViewBag.Category.Name</h1>
<div class="division"></div>

<div class="row">
    <div class="col col-6">
        <h3>Products:</h3>
        <ul>
            @foreach (var item in @ViewBag.Category.Connections){
                <li>
                    <a href="/Categories/Remove_Prod/@item.Product.ProductId/@ViewBag.Category.CategoryId"
                    class="btn btn-danger btn-small">Del</a>
                    @item.Product.Name
                </li>
            }
        </ul>
    </div>

    <div class="col col-6">
        <form action="/Categories/Add_Prod" method="POST">
            <div class="form-group">
                <label for="Product"><h3>Add Product:</h3></label>
                <select name="Product" id="Product" class="form-control">
                    <option value=""disabled selected>---</option>
                    @foreach (var item in @Model){
                        <option value="@item.ProductId">@item.Name</option>
                    }
                </select>
                <input type="hidden" name="Category" value="@ViewBag.Category.CategoryId">
            </div>
            <input type="submit" class="btn btn-primary"value="Add">
        </form>
    </div>
</div>

<a href="/Categories/Edit/@ViewBag.Category.CategoryId" class="btn btn-dark">Edit</a>





