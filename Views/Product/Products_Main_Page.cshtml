@{
    ViewData["Title"] = "Home Page";
}
@model Prod_Cate.Models.Product

<header>
    <table>
        <tr>
            <td class="side">
                <a>Products</a>
            </td>
            <td class="mid">|</td>
            <td class="side">
                <a href="/Categories">Categories</a>
            </td>
        </tr>
    </table>
</header>

<div class="division"></div>

<div class="row">
    <div class="col col-6">
        <h3>New Product</h3>

        <form asp-action="Create_Product" asp-controller="Product" method="POST">
            
            <div class="form-group">
                <label asp-for="Name">Product Name:</label><span asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control" placeholder="---">
            </div>
            <div class="form-group">
                <label asp-for="Price">Product Price:</label><span asp-validation-for="Price"></span>
                <input asp-for="Price" class="form-control" placeholder="---">
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label><span asp-validation-for="Description"></span>
                <textarea asp-for="Description" rows="3" class="form-control" placeholder="---"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Create</button>
        </form>

    </div>

    <div class="col col-6">
        <h3>Product List</h3>

        <ul>
            @foreach (var item in @ViewBag.Products){
                <li>
                    <a href="/Products/Delete/@item.ProductId" class="btn btn-danger btn-small">Del</a>
                    <a href="/Products/View/@item.ProductId">@item.Name</a>
                </li>
            }
        </ul>
        
    </div>
</div>








