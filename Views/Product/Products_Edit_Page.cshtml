@{
    ViewData["Title"] = "Home Page";
}
@model Prod_Cate.Models.Product

<a href="/Products/View/@Model.ProductId" class="btn btn-success">Back</a>

<div class="division"></div>

<div class="row">
    <div class="col col-6">
        <h3>Edit Product</h3>

        <form asp-action="Edit_Product" asp-route-id= "@Model.ProductId" asp-controller="Product" method="POST">
            
            <div class="form-group">
                <label asp-for="Name">Product Name:</label><span asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control" value="@Model.Name" placeholder="---">
            </div>
            <div class="form-group">
                <label asp-for="Price">Product Price:</label><span asp-validation-for="Price"></span>
                <input asp-for="Price" class="form-control" value="@Model.Price_Display" placeholder="---">
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label><span asp-validation-for="Description"></span>
                <textarea asp-for="Description" rows="3" class="form-control" value="@Model.Description" placeholder="---"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </form>

    </div>

    <div class="col col-6">

        
    </div>
</div>








